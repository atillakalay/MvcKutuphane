@model MvcKutuphane.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yazar Güncelleme Sayfası</h2>
<br/>
@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
    <div class="form-group">
        <label>Id</label>
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top: 15px">
        <label>Ad</label>
        @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top: 15px">
        <label>Soyad</label>
        @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top: 15px">
        <label>Detay</label>
        @Html.TextAreaFor(x => x.DETAY, new { @class = "form-control" })
    </div>
    <button class="btn btn-warning">Bilgileri Güncelle</button>
}
