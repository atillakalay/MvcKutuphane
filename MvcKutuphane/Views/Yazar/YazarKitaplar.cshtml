@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yazar : @ViewBag.yazarad</h2>
<br/>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>KİTAP ADI</th>
        <th>KATEGORİ</th>
        <th>YAYINEVİ</th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.ID</td>
            <td>@book.AD</td>
            <td>@book.TBLKATEGORI.AD</td>
            <td>@book.YAYINEVI</td>
        </tr>
    }
</table>

