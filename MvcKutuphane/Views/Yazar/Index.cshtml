@using MvcKutuphane.Models.Entity;
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Yazarlar</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>AD-SOYAD</th>
        <th>DETAY</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD @x.SOYAD</td>
            <td>@x.DETAY</td>
            <td><a href="/Yazar/YazarSil/@x.ID" class="btn btn-danger" onclick="return confirm('Gerçekten Silmek İstiyormusunuz ?')">Sil</a></td>
            <td><a href="/Yazar/YazarGetir/@x.ID" class="btn btn-primary">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Yazar/YazarEkle/" class="btn btn-success">Yeni Yazar Ekle</a>

