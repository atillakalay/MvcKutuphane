@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>İadesi Gerçekleşen Kitaplar</h2>
<br />
<table class="table table-hover" style=margin-top: 15px>

    <tr>
        <th>İŞLEM ID</th>
        <th>KİTAP AD</th>
        <th>ÜYE</th>
        <th>PERSONEL</th>
        <th>ALIŞ TARİH</th>
        <th>İADE TARİH</th>
        <th>İADE AL</th>


    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.TBLKITAP.AD</td>
            <td>@x.TBLUYELER.AD @x.TBLUYELER.SOYAD</td>
            <td>@x.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(x.ALISTARIH).ToString("MMM/dd/yyyy") </td>
            <td>@Convert.ToDateTime(x.IADETARIH).ToString("MMM/dd/yyyy")</td>

            <td><a href="#" class="btn btn-default" style="background: green;color: white"}>Detaylar</a></td>

        </tr>
    }
</table>



