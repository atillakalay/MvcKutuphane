@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "Oduncver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kitap Ekleme Sayfası</h2>
<br />
<form class="form form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Üye</label>
        @Html.DropDownListFor(k => k.TBLUYELER.ID, (List<SelectListItem>)ViewBag.dgr1,new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap</label>
        @Html.DropDownListFor(k => k.TBLKITAP.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel</label>
        @Html.DropDownListFor(k => k.TBLPERSONEL.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    </div>
    <div style="margin-top: 15px">
        <label>Kitap Veriliş Tarihi</label>
        <input name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" class="form-control" />
    </div>
    <div style="margin-top: 15px">
        <label>Kitap İade Tarihi</label>
        <input name="IADETARIH" type="date" class="form-control" />
    </div>


    <div style="margin-top: 15px">
        <button class="btn btn-info">Kitap Ver</button>
    </div>
    <input type="hidden" value="false" name="ISLEMDURUM"/>
</form>

