@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Üyeler</h2>
<br />
<table class="table table-hover">
    <tr style=" background: #dedddb">
        <th>ID</th>
        <th>AD SOYAD</th>
        <th>MAİL</th>
        <th>TELEFON</th>
        <th>OKUL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>GEÇMİŞ</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD @x.SOYAD</td>
            <td>@x.MAIL</td>
            <td>@x.TELEFON</td>
            <td>@x.OKUL</td>
            <td><a href="/Uye/UyeSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Uye/UyeGetir/@x.ID" class="btn btn-primary">Güncelle</a></td>
            <td><a href="/Uye/UyeKitapGecmis/@x.ID" class="btn btn-default" style="background: #717782;color: white">Geçmiş</a></td>

        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Uye/UyeEkle/" class="btn btn-success">Ekle</a>




