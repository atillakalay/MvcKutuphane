@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kitaplar</h2>
<br />
@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{ 
<div style="margin-bottom: 15px; margin-top: 15px;">
    <b>Aranacak Kitap Adını Girin :</b> @Html.TextBox("p")
    <input type="submit" value="Ara" />
</div>
}
<table class="table table-hover" style=margin-top: 15px>

    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>YAZAR</th>
        <th>KATEGORİ</th>
        <th>BASIM YILI</th>
        <th>YAYINEVİ</th>
        <th>SAYFA</th>
        <th>DURUM</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td>@x.TBLYAZAR.AD @x.TBLYAZAR.SOYAD</td>
            <td>@x.TBLKATEGORI.AD</td>
            <td>@x.BASIMYIL</td>
            <td>@x.YAYINEVI</td>
            <td>@x.SAYFA</td>
            <td>@x.DURUM</td>
            <td><a href="/Kitap/KitapSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@x.ID" class="btn btn-primary">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-success">Yeni Kitap Ekle</a>