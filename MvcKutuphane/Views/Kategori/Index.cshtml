@using MvcKutuphane.Models.Entity;
@model List<TBLKATEGORI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Kategoriler</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ AD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td><a href="/Kategori/KategoriSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@x.ID" class="btn btn-primary">Güncelle</a></td>
            
        </tr>
    }
</table>
<a href="/Kategori/KategoriEkle/" class="btn btn-success">Yeni Kategori Ekle</a>

