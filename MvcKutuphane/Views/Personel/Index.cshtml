@using MvcKutuphane.Models.Entity;
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Persosneller</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>PERSONEL ID</th>
        <th>PERSONEL AD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.PERSONEL</td>
            <td><a href="/Personel/PersonelSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@x.ID" class="btn btn-primary">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-success">Yeni Personel Ekle</a>


